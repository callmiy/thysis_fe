{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "start front end js only",
      "type": "shell",
      "command": "launch_with_cmder.bat \"npm start\"",
      "group": "build",
      "problemMatcher": []
    },

    {
      "label": "build front end dev",
      "type": "shell",
      "command": "yarn deploy",
      "options": {
        "env": {
          "REACT_APP_API_URL": "http://localhost:4016/api"
        }
      },
      "group": "build",
      "problemMatcher": []
    },

    {
      "label": "build front end prod",
      "type": "shell",
      "command": "yarn deploy",
      "options": {
        "env": {
          "REACT_APP_API_URL": "https://thysis.herokuapp.com/api"
        }
      },
      "group": "build",
      "problemMatcher": []
    },

    {
      "label": "Apollo code gen",
      "type": "shell",
      "command": "apollo-codegen introspect-schema http://localhost:4016/api --output src/graphql/schema.json && apollo-codegen generate src/graphql/*.ts --schema src/graphql/schema.json --target typescript --output src/graphql/gen.types.ts",
      "problemMatcher": []
    }
  ]
}
